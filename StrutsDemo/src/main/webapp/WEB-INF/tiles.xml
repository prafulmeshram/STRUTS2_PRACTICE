<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	<definition name="layout"
		template="/WEB-INF/struts-demo/layout/base-layout.jsp">
		<put-attribute name="title"></put-attribute>
		<put-attribute name="header"
			value="/WEB-INF/struts-demo/view/header.jsp"></put-attribute>
		<put-attribute name="body"></put-attribute>
		<put-attribute name="footer"
			value="/WEB-INF/struts-demo/view/footer.jsp"></put-attribute>
	</definition>

	<definition name="welcome" extends="layout">
		<put-attribute name="title" value="Welcome"></put-attribute>
		<put-attribute name="body"
			value="/WEB-INF/struts-demo/view/welcome.jsp"></put-attribute>
	</definition>

	<definition name="newEmployee" extends="layout">
		<put-attribute name="title" value="New Employee"></put-attribute>
		<put-attribute name="body"
			value="/WEB-INF/struts-demo/view/employee/newEmployee.jsp"></put-attribute>
	</definition>

	<definition name="viewEmployee" extends="layout">
		<put-attribute name="title" value="View Employee"></put-attribute>
		<put-attribute name="body"
			value="/WEB-INF/struts-demo/view/employee/viewEmployee.jsp"></put-attribute>
	</definition>

	<!-- Teacher Pages -->
	<definition name="teacherList" extends="layout">
		<put-attribute name="title" value="Teachers"></put-attribute>
		<put-attribute name="body"
			value="/WEB-INF/struts-demo/view/teacher/teacherList.jsp"></put-attribute>
	</definition>
	<definition name="viewTeacher" extends="layout">
		<put-attribute name="title" value="View Teacher"></put-attribute>
		<put-attribute name="body"
			value="/WEB-INF/struts-demo/view/teacher/viewTeacher.jsp"></put-attribute>
	</definition>
	<definition name="newTeacher" extends="layout">
		<put-attribute name="title" value="New Teacher"></put-attribute>
		<put-attribute name="body"
			value="/WEB-INF/struts-demo/view/teacher/newTeacher.jsp"></put-attribute>
	</definition>
</tiles-definitions>